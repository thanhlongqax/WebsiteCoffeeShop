@model WebsiteCoffeeShop.Models.Category
@using Microsoft.AspNetCore.Mvc.Rendering
@{
	ViewData["Title"] = "Thêm danh mục";
}
<h2>Thêm danh mục</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Tên danh mục</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-2">Thêm</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Quay lại</a>
</form>