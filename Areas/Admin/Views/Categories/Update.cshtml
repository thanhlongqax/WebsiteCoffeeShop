@model WebsiteCoffeeShop.Models.Category

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
}

<h2>Chỉnh sửa danh mục</h2>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Tên danh mục</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning mt-2">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Quay lại</a>
</form>